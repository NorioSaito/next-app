{
	"extends": ["next/core-web-vitals", "airbnb-base", "plugin:prettier/recommended"],
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"no-console": ["error"],
		"indent": ["error", "tab"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-unused-vars": ["error"],
		"camelcase": ["error"],
		"no-tabs": "off",
		"import/extensions": "off",
		"prettier/prettier": ["error", {}, { "usePrettierrc": true }]
	},
	"settings": {
		"import/resolver": {
			"typescript": {}
		}
	}
}
